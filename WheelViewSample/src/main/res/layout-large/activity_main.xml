    <com.lukedeighton.wheelview.WheelView
        android:id="@+id/wheelview"
        android:layout_width="match_parent"
        app:emptyItemColor="@color/green_900"
        app:wheelColor="@color/grey_400"
        app:rotatableWheelDrawable="false"
        app:selectionAngle="90.0"
        app:selectionColor="@color/teal_900"
        app:selectionPadding="4dp"
        app:repeatItems="true"
        app:wheelRadius="276dp"
        app:wheelItemCount="14"
        app:wheelPadding="13dp"
        app:wheelItemRadius="41dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/button_register"/>

    <TextView
        android:text="@string/gift_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="@dimen/text_gift_count"
        android:layout_alignBaseline="@+id/registerBtn"
        android:layout_alignBottom="@+id/registerBtn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_height="wrap_content"
        android:id="@+id/textview_gift_count"
        android:textSize="@dimen/text_gift_count"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_width="80dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        tools:ignore="ContentDescription"
        android:layout_centerInParent="true" />

    <Button
        android:text="@string/btn_bingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registerBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_bingo"
        android:visibility="invisible" />

    <TextView
        android:text="@string/label_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text_preExChange"
        android:layout_toEndOf="@+id/text_preExChange"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/text_preExChange"
        android:textSize="@dimen/text_current_status" />

    <TextView
        android:text="xxxxxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:id="@+id/text_postExchange"
        android:textSize="@dimen/text_current_status"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/text_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_postExchange"
        android:layout_toRightOf="@+id/text_postExchange"
        android:layout_toEndOf="@+id/text_postExchange"
        android:id="@+id/textView7"
        android:textSize="@dimen/text_current_status" />

    <TextView
        android:text="@string/label_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:id="@+id/label_status"
        android:textSize="@dimen/text_current_status"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="xxxxxxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_preExChange"
        android:textSize="@dimen/text_current_status"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/label_status"
        android:layout_alignBottom="@+id/label_status"
        android:layout_toRightOf="@+id/label_status"
        android:layout_toEndOf="@+id/label_status" />

    <!--
            app:wheelPosition="bottom"
                    app:wheelOffsetY="60dp"

        app:wheelItemTransformer="com.lukedeighton.wheelview.transformer.SimpleItemTransformer"

    -->
</RelativeLayout>